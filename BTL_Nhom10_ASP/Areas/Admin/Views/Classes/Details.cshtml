@model BTL_Nhom10_ASP.Models.Class

@{
    ViewBag.Title = "Details";
}

<style>
    dd {
        color: black;
    }

    a {
        color: blue;
    }
</style>
<div class="row" style="margin-top: 50px">
    <div class="col-lg-12">
        <h1>Chi tiết lớp học</h1>
    </div>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Teacher.TeacherName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Teacher.TeacherName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ClassName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClassName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartDay)
        </dt>

        <dd>
            @if (Model.StartDay.HasValue)
            {
                @Model.StartDay.Value.ToString("dd/MM/yyyy")
            }
            else
            {
                @Html.DisplayFor(model => model.StartDay)
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDay)
        </dt>

        <dd>
            @if (Model.EndDay.HasValue)
            {
                @Model.EndDay.Value.ToString("dd/MM/yyyy")
            }
            else
            {
                @Html.DisplayFor(model => model.EndDay)
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.ClassID }) |
    @Html.ActionLink("Trở về danh sách lớp học", "Index")
</p>
