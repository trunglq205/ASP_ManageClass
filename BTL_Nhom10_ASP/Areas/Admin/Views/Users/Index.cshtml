@model PagedList.IPagedList<BTL_Nhom10_ASP.Models.User>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<style>
    .m-table-container{
        height: 500px;
    }
</style>
<div class="row" style="margin-top: 50px">
    <div class="col-lg-9">
        <h1>Danh sách tài khoản quản lý</h1>
    </div>
    <div class="col-lg-3">
        <button type="button" class="btn btn-outline-success" data-toggle="modal"><a href="/Admin/Users/Create"> <i class="fa fa-plus-circle yellow_color"></i> Thêm mới</a></button>
    </div>
</div>

<div style="margin-top: 30px">
    <div class="m-table-container">
        <table border="1" class="m-table">
            <tr>
                <th>
                    Mã tài khoản
                </th>
                <th>
                    Tên tài khoản
                </th>
                <th>
                    Họ tên
                </th>
                <th>
                    Chức vụ
                </th>
                <th>Tùy chọn</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        <a href="/Admin/Users/Edit/@item.UserID"> <i class="fa fa-wrench blue1_color icon_link"></i></a> |
                        <a href="/Admin/Users/Details/@item.UserID"> <i class="fa fa-info-circle green_color icon_link"></i> </a> |
                        <a href="/Admin/Users/Delete/@item.UserID"> <i class="fa fa-trash-o red_color icon_link"></i></a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
<br />
<div class="page">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page }))
</div>

