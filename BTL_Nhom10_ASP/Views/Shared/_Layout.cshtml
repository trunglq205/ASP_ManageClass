<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <title>Pluto Center</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="stylesheet" href="~/wwwroot/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/wwwroot/style.css" />
    <link rel="stylesheet" href="~/wwwroot/css/responsive.css" />
    <link rel="stylesheet" href="~/wwwroot/css/custom.css" />
    <link rel="stylesheet" href="~/wwwroot/css/table.css" />
</head>
<body class="dashboard dashboard_1">
    <div class="full_container">
        <div class="inner_container">
            <nav id="sidebar">
                <div class="sidebar_blog_1">
                    <div class="sidebar_user_info">
                        <div class="icon_setting"></div>
                        <div class="user_profle_side">
                            <div class="user_img">
                                @{
                                    string Imagepath = "";
                                    if (Session["Picture"] != null)
                                    {
                                        Imagepath = "~/wwwroot/images/students/" + Session["Picture"].ToString();
                                    }
                                    else
                                    {
                                        Imagepath = "~/wwwroot/images/macdinh.jpg";
                                    }

                                }
                                <img class="img-responsive rounded-circle" src="@Url.Content(Imagepath)" />
                            </div>
                            <div class="user_info">
                                <h6>@Session["StudentName"]</h6>
                                <p><span class="online_animation"></span> Học viên</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sidebar_blog_2">
                    <h4>General</h4>
                    <ul class="list-unstyled components">
                        <li>
                            <a href="@Url.Action("Index","Home")"><i class="fa fa-bell red_color"></i> <span>Thông báo</span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Students")"><i class="fa fa-graduation-cap green_color"></i> <span>Thông tin cá nhân</span></a>
                        </li>
                        <li><a href="@Url.Action("Index","Classes")"><i class="fa fa-hourglass yellow_color"></i> <span>Thông tin lớp học</span></a></li>
                        <li>
                            <a href="@Url.Action("Index","TimeTable")"><i class="fa fa-calendar white_color"></i> <span>Xem thời khóa biểu</span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Marks")"><i class="fa fa-table brown_color"></i> <span>Xem kết quả học tập</span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("Logout","Home")"><i class="fa fa-sign-out red_color"></i> <span>Đăng xuất</span></a>
                        </li>
                    </ul>
                </div>
            </nav>
            <div id="content">
                <div class="topbar">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <div class="full">
                            <button type="button" id="sidebarCollapse" class="sidebar_toggle"><i class="fa fa-bars"></i></button>
                            <div class="logo_section">
                                <a href="/Admin"><img class="img-responsive" src="~/wwwroot/images/logo.png" alt="#" /></a>
                            </div>
                            <div class="right_topbar">
                                <div class="icon_info">
                                    <ul class="user_profile_dd">
                                        <li>
                                            
                                            @{
                                                string ImagePath = "";
                                                if (Session["Picture"]!=null)
                                                {
                                                    ImagePath = "~/wwwroot/images/students/"+ Session["Picture"].ToString();
                                                }
                                                else
                                                {
                                                    ImagePath = "~/wwwroot/images/macdinh.jpg";
                                                }

                                            }
                                            <a class="dropdown-toggle" data-toggle="dropdown"><img class="img-responsive rounded-circle" height="30" src = "@Url.Content(ImagePath)" /><span class="name_user">@Session["StudentName"]</span></a>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="@Url.Action("Logout","Home")"><span>Đăng xuất</span> <i class="fa fa-sign-out"></i></a>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/wwwroot/js/jquery.min.js"></script>
    <script src="~/wwwroot/js/bootstrap.min.js"></script>
    <script src="~/wwwroot/js/custom.js"></script>
</body>
</html>

